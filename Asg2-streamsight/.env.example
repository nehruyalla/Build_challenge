# StreamSight Configuration Template
# Copy this file to .env and customize as needed
# cp .env.example .env

# Input/Output Paths
STREAMSIGHT_INPUT_FILE=dataset/Online_Retail.csv
STREAMSIGHT_OUTPUT_DIR=results

# Analytics Parameters
# Number of top products to track (1-100)
STREAMSIGHT_TOP_K_PRODUCTS=10

# Z-score threshold for anomaly detection (>0)
STREAMSIGHT_ZSCORE_THRESHOLD=3.0

# Whale customer percentile threshold (1-100)
# 99 = top 1% of customers
STREAMSIGHT_RFM_WHALE_PERCENTILE=99

# Reference date for RFM recency calculation (YYYY-MM-DD)
# Leave commented out to auto-detect from data
# STREAMSIGHT_RFM_REFERENCE_DATE=2023-12-31

# Performance Tuning
STREAMSIGHT_CHUNK_SIZE=1000

# Feature Flags
STREAMSIGHT_ENABLE_ANOMALY_DETECTION=true
STREAMSIGHT_ENABLE_RFM_ANALYSIS=true

# Logging Level (DEBUG, INFO, WARNING, ERROR)
STREAMSIGHT_LOG_LEVEL=INFO
